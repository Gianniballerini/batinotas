<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>State</th>
      <th>Priority</th>
      <th>Percentage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list.tasks.where(type: 'LongTask').each do |long_task| %>
      <tr>
        <td><%= long_task.description %></td>
        <td><%= long_task.state %></td>
        <td><%= long_task.priority %></td>
        <td><%= long_task.percentage %></td>
        <td><%= link_to 'Show', long_task %></td>
        <td><%= link_to 'Edit', edit_long_task_path(long_task) %></td>
        <td><%= link_to 'Destroy', long_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>