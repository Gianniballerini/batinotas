<section class="jumbotron text-center text-xs-center">
	<p class="text-info" id="notice"><%= notice %></p>
	<div class="container">
		<h1 class="jumbotron-heading">
			<strong>Name:</strong>
  			<%= @list.name %>
		</h1>
		<p class="lead text-muted">
		  <strong>Created:</strong>
		  <%= @list.created_at.strftime("%B %d at %I:%M %p") %>
		</p>
		<p class="lead text-muted">
		  <strong>Last Updated:</strong>
		  <%= @list.updated_at.strftime("%B %d at %I:%M %p") %>
		</p>

		<div class="input-group">
		  <span class="input-group-addon" id="basic-addon3">URL</span>
		  <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3" value=<%= request.original_url %>>
		</div>
		<br>
		<p>
			<%= link_to ' Home ', new_list_path , class: "btn btn-primary" %>
			<%= link_to ' Edit ', edit_list_path(@list) , class: "btn btn-secondary" %> 
			<%= link_to 'Destroy', @list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
		</p>
	</div>
</section>
	
	
<div class='row'>
	<div class="col-xl-6 col-md-6 col-xs-12" >
		<h1> Simple Tasks </h1>
		<%= render 'tabla_simple' %>
		<%= link_to 'New Simple Task', new_list_simple_task_path(@list), class: "btn btn-lg btn-success" %>
	</div>

	<div class="col-xl-6 col-md-6 col-xs-12" >
		<h1> Long Tasks </h1>
		<%= render 'tabla_long' %>
		<%= link_to 'New Long Task', new_list_long_task_path(@list), class: "btn btn-lg btn-success" %>
	</div>

	<div class="col-xl-12 col-xs-12 col-md-12 " >
		<br>
	</div>

	<div class="col-xl-12 col-xs-12 col-md-12 " >
		<br>
	</div>		
		
	<div class="col-xl-12 col-xs-12 col-md-12 " >
		<h1> Temporal Tasks </h1>
		<%= render 'tabla_temporal' %>
		<%= link_to 'New Temporal Task', new_list_temporal_task_path(@list), class: "btn btn-lg btn-success" %>	
	</div>
</div>